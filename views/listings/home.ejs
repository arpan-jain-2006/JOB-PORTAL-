    /*======= GLOWING HERO SECTION =======*/
    .hero {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        position: relative;
        overflow: hidden;
        padding: 0 20px;
    }
    .hero::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(255,0,255,0.1) 0%, rgba(0,255,255,0.1) 50%, transparent 70%);
        animation: rotate 15s linear infinite;
        z-index: -1;
    }
    .hero::after {
        content: '';
        position: absolute;
        bottom: -50%;
        right: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(0,255,255,0.1) 0%, rgba(255,0,255,0.1) 50%, transparent 70%);
        animation: rotate 20s linear infinite reverse;
        z-index: -1;
    }
    .hero-content {
        max-width: 900px;
        padding: 40px;
        position: relative;
    }
    h1 {
        font-family: 'Montserrat', sans-serif;
        font-size: 5rem;
        margin-bottom: 20px;
        background: linear-gradient(45deg, #ff8a00, #e52e71, #6a11cb);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
        animation: fadeIn 1s ease-out;
        line-height: 1.1;
        text-shadow: 0 0 20px rgba(255, 138, 0, 0.3);
    }
    .tagline {
        font-size: 1.8rem;
        margin-bottom: 40px;
        opacity: 0.9;
        animation: fadeIn 1s 0.3s forwards;
        font-weight: 300;
    }
    .search-bar {
        max-width: 700px;
        margin: 0 auto 40px;
        position: relative;
        animation: fadeIn 1s 0.6s forwards;
        opacity: 0;
    }
    .search-bar input {
        width: 100%;
        padding: 18px 30px;
        border-radius: 50px;
        border: none;
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(10px);
        color: white;
        font-size: 1.1rem;
        border: 1px solid rgba(255, 255, 255, 0.2);
        transition: all 0.3s;
    }
    .search-bar input:focus {
        outline: none;
        background: rgba(255, 255, 255, 0.25);
        box-shadow: 0 0 30px rgba(255, 138, 0, 0.2);
    }
    .search-bar button {
        position: absolute;
        right: 5px;
        top: 5px;
        background: linear-gradient(45deg, #ff8a00, #e52e71);
        border: none;
        color: white;
        padding: 13px 25px;
        border-radius: 50px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
    }
    .search-bar button:hover {
        transform: scale(1.05);
        box-shadow: 0 0 20px rgba(255, 138, 0, 0.4);
    }
    .cta-buttons {
        display: flex;
        gap: 20px;
        justify-content: center;
        margin-top: 30px;
        animation: fadeIn 1s 0.9s forwards;
        opacity: 0;
    }
    .btn {
        padding: 18px 40px;
        border-radius: 50px;
        font-weight: 600;
        font-size: 1.1rem;
        cursor: pointer;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        text-decoration: none;
        display: inline-block;
    }
    .btn-primary {
        background: linear-gradient(45deg, #ff8a00, #e52e71);
        color: white;
        box-shadow: 0 10px 25px rgba(233, 30, 99, 0.3);
    }
    .btn-primary:hover {
        transform: translateY(-5px) scale(1.05);
        box-shadow: 0 15px 35px rgba(233, 30, 99, 0.4);
    }
    .btn-secondary {
        background: rgba(255, 255, 255, 0.1);
        color: white;
        border: 1px solid rgba(255, 255, 255, 0.3);
        backdrop-filter: blur(5px);
    }
    .btn-secondary:hover {
        background: rgba(255, 255, 255, 0.2);
        transform: translateY(-3px);
    }
    .stats {
        display: flex;
        justify-content: center;
        gap: 40px;
        margin-top: 60px;
        animation: fadeIn 1s 1.2s forwards;
        opacity: 0;
    }
    .stat-item {
        text-align: center;
    }
    .stat-number {
        font-size: 2.5rem;
        font-weight: 700;
        background: linear-gradient(45deg, #ff8a00, #e52e71);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
        margin-bottom: 5px;
    }
    .stat-label {
        font-size: 0.9rem;
        opacity: 0.8;
        letter-spacing: 1px;
    }

    /*======= TRENDING JOBS SECTION =======*/
    .section {
        padding: 100px 20px;
        position: relative;
    }
    .jobs-section {
        background: rgba(255, 255, 255, 0.03);
        backdrop-filter: blur(10px);
    }
    .section-title {
        text-align: center;
        font-size: 2.5rem;
        margin-bottom: 60px;
        position: relative;
        display: inline-block;
        left: 50%;
        transform: translateX(-50%);
        font-family: 'Montserrat', sans-serif;
    }
    .section-title::after {
        content: '';
        position: absolute;
        bottom: -15px;
        left: 0;
        width: 100%;
        height: 4px;
        background: linear-gradient(90deg, #ff8a00, #e52e71);
        border-radius: 3px;
    }
    .jobs-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 30px;
        max-width: 1300px;
        margin: 0 auto;
    }
    .job-card {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 15px;
        padding: 35px;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        border: 1px solid rgba(255, 255, 255, 0.1);
        position: relative;
        overflow: hidden;
    }
    .job-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 5px;
        background: linear-gradient(90deg, #ff8a00, #e52e71);
    }
    .job-card:hover {
        transform: translateY(-10px) scale(1.02);
        background: rgba(255, 255, 255, 0.1);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    }
    .job-card h3 {
        font-size: 1.6rem;
        margin-bottom: 15px;
        color: #ff8a00;
    }
    .job-card .company {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 15px;
    }
    .company-logo {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.1);
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        flex-shrink: 0;
    }
    .job-card .company-info {
        flex-grow: 1;
    }
    .job-card .company-name {
        font-weight: 600;
        margin-bottom: 3px;
    }
    .job-card .location {
        font-size: 0.9rem;
        opacity: 0.8;
        display: flex;
        align-items: center;
        gap: 5px;
    }
    .job-details {
        margin-top: 20px;
        display: flex;
        flex-wrap: wrap;
        gap: 12px;
    }
    .detail-item {
        background: rgba(255, 255, 255, 0.1);
        padding: 6px 18px;
        border-radius: 20px;
        font-size: 0.9rem;
        display: flex;
        align-items: center;
        gap: 5px;
    }
    .salary {
        color: #4CAF50;
        font-weight: 600;
    }
    .job-card .time {
        position: absolute;
        top: 20px;
        right: 20px;
        font-size: 0.8rem;
        opacity: 0.7;
    }
    .view-all {
        text-align: center;
        margin-top: 50px;
    }

    /*======= CATEGORIES SECTION =======*/
    .categories-section {
        background: rgba(0, 0, 0, 0.2);
    }
    .categories-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        max-width: 1200px;
        margin: 0 auto;
    }
    .category-card {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 15px;
        padding: 30px 20px;
        text-align: center;
        transition: all 0.3s;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }
    .category-card:hover {
        transform: translateY(-5px);
        background: rgba(255, 255, 255, 0.1);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    }
    .category-icon {
        font-size: 2.5rem;
        margin-bottom: 15px;
        background: linear-gradient(45deg, #ff8a00, #e52e71);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
    }
    .category-card h3 {
        margin-bottom: 10px;
        font-size: 1.2rem;
    }
    .category-card p {
        font-size: 0.9rem;
        opacity: 0.7;
    }

    /*======= TESTIMONIALS SECTION =======*/
